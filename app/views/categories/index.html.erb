<h3>Listing categories</h3>

<table class="table table-hover table-bordered">
  <tr>
    <th>Category name</th>
    <th></th>

    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.category_name %></td>

    <td><button class="btn"><%= link_to 'Edit', edit_category_path(category) %></button></td>
    <td><button class="btn"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
<% end %>
</table>

<br />

<button class="btn"><%= link_to 'New Category', new_category_path %>   </button>
